# .env.example

# The timezone used in log timestamps (default: UTC)
TZ=UTC

# Port the app will listen on (default: 3000)
LISTEN_PORT=3000

# Path for the rejection API endpoint (default: /no)
API_ENDPOINT_NO=/no

# Path for the nohello API endpoint (default: /no)
API_ENDPOINT_NOHELLO=/nohello

# Max number of requests per IP (default: 120)
RATE_LIMIT_REQUESTS=120

# Time window in seconds for rate limit (default: 60)
RATE_LIMIT_SECONDS=60

# JSON object of IP-based rate limit overrides (default: {})
# Format: {"127.0.0.1": 1000, "1.2.3.4": 500}
RATE_LIMIT_OVERRIDES={"127.0.0.1":500}

# Enable or disable root route redirect (default: true)
# To disable: set to false
REDIRECT_ROOT_ENABLED=true

# Destination URL for root redirect (default: NaaS GitHub README)
REDIRECT_ROOT_DEST=https://github.com/claytonfuselier/no-as-a-service
